{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "out", "example", "tests"]
}
